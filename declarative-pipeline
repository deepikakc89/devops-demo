pipeline {
    agent any
    tools {
      maven 'mvn_home'
    }

    stages {
        stage('SCM-Checkout') {
            steps {
                git branch: 'main', credentialsId: 'pappu1', url: 'https://github.com/deepikakc89/my-app.git'
            }
        }
	stage('Maven - clean') {
            steps {
               sh 'mvn clean'
            }
        }
        stage('Maven - compile') {
            steps {
               sh 'mvn compile'
            }
        }
	stage('Maven - deploy') {
            steps {
               sh 'mvn package'
            }
        }

    }
}
